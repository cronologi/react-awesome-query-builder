{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable"
    ],
    "experimentalDecorators": true,
    "allowJs": true,
    "outDir": "ts_out",
    "declaration": true,
    
    "strict": true,
    "alwaysStrict": true,
    "strictNullChecks": false,

    "esModuleInterop": true,
    "moduleResolution": "node",

    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*"
  ]
}
